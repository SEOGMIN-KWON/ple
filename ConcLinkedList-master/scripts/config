unm=$(uname -n);

num_cores=$(nproc);

echo "## I will use $num_cores as the number of cores of your PC/laptop/server/mobile."
echo "## If not correct, change it in scripts/config :-)";

if [ $unm = "parsasrv1.epfl.ch" ];
then
    run_script="./run"
fi;

if [ "$cores" = "all" ];
then
    if [ $unm = "maglite" ];
    then
	cores=$(seq 2 1 64);
    elif [ $unm = "parsasrv1.epfl.ch" ];
    then
	cores=$(seq 2 1 36);
    elif [ $unm = "diassrv8" ];
    then
	cores=$(seq 2 1 80);
    elif [ $unm = "lpdpc34" ];
    then
	cores=$(seq 2 1 8);
    else
	cores=$(seq 2 1 $num_cores);
    fi;
elif [ "$cores" = "socket" ];
then
    if [ $unm = "maglite" ];
    then
	cores=$(seq 8 8 64);
    elif [ $unm = "parsasrv1.epfl.ch" ];
    then
	cores=$(seq 6 6 36);
    elif [ $unm = "diassrv8" ];
    then
	cores=$(seq 10 10 80);
    elif [ $unm = "lpdpc34" ];
    then
	cores=$(seq 2 1 8);
    else
	cores=$(seq 1 1 $num_cores);
    fi;
elif [ "$cores" = "step" ];
then
    if [ $unm = "maglite" ];
    then
	cores=$(seq 7 1 10);
    elif [ $unm = "parsasrv1.epfl.ch" ];
    then
	cores=$(seq 5 1 8);
    elif [ $unm = "diassrv8" ];
    then
	cores=$(seq 9 1 11);
    elif [ $unm = "lpdpc34" ];
    then
	cores=$(seq 2 1 8);
    else
	cores=$(seq 1 1 $num_cores);
    fi;
elif [ "$cores" = "twelve" ];
then
    cores=$(seq 2 1 12);
fi;

if [ $unm = "maglite" ];
then
	max_cores=64;
elif [ $unm = "parsasrv1.epfl.ch" ];
then
	max_cores=36;
elif [ $unm = "diassrv8" ];
then
	max_cores=80;
elif [ $unm = "lpdpc34" ];
then
	max_cores=8;
else
	max_cores=$num_cores;
fi;
